<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/googledrivelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/googledrivelogo"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/text"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/googledrivelogo"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:text="Upload File With Google Drive"
        android:fontFamily="@font/hind_light"/>

    <ImageView
        android:id="@+id/addfilesdrive"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/plus"/>

    <ImageView
        android:id="@+id/filelogo"
        android:src="@drawable/filelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/googledrivelogo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/filelogo"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:text="Upload File With Storage"
        android:fontFamily="@font/hind_light"/>

    <ImageView
        android:id="@+id/addfilestor"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text2"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/plus"/>

</RelativeLayout>